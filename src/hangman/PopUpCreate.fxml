<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hangman.PopUpCreateController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="52.0" prefWidth="600.0" spacing="30.0">
               <children>
                  <Label text="Provide the Dictionary ID:">
                     <font>
                        <Font name="Bauhaus 93" size="22.0" />
                     </font>
                  </Label>
                  <TextField fx:id="dictIDtoCreateLabel" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="600.0" spacing="30.0">
               <children>
                  <Label text="Provide the OpenLibrary ID:">
                     <font>
                        <Font name="Bauhaus 93" size="22.0" />
                     </font>
                  </Label>
                  <TextField fx:id="OLIDtoCreateLabel" />
               </children>
            </HBox>
            <Button fx:id="popupCreateSubmitBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#pressedSubmit" prefHeight="30.0" prefWidth="90.0" text="submit" textAlignment="CENTER" />
            <Label fx:id="outCreateLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="177.0" prefWidth="604.0" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
